html, body
    margin 0
    padding 0
    height 100%

html, body, h1, h2, h3, h4, h5, h6, div, span, p
    font-family 'PingFang SC', 'Helvetica', 'Arial', sans-serif

.header
    padding 3rem
    background-image linear-gradient(120deg, #a1c4fd 0%, #c2e9fb 100%)
    .title, .subtitle
        text-align center

.content
    width 100%
    min-height calc(100vh - 12rem)
    display flex
    flex-flow row wrap
    justify-content center
    align-items flex-start
    & > *
        height 100%
    .nav
        margin 0 16px
        flex 0 0 240px
        ul
            border-right 1px solid #0AF
            list-style none
            padding 0 8px
            li
                cursor pointer
                padding 32px 16px
                transition all .2s ease-out
                &:hover
                    box-shadow 0 0 2px 2px rgba(0,0,0,.16)
                &.active
                    background-color #6CF
    .container
        flex 1
        .tab-container
            width 100%

.layout
    .input__layout
        display flex
        flex-flow row wrap
        align-items center
        .input__field
            margin 4px 16px 4px 0
    .calculated-result
        margin 32px 0
        span
            font-size 20px
            padding 0 8px
            border-bottom 1px solid #0AF

.footer
    text-align center
    padding 1.5rem

.loading
    width 80px
    height 40px
    margin 0 auto
    margin-top 100px
    span
        display inline-block
        width 8px
        height 100%
        border-radius 4px
        background lightgreen
        animation load 1s ease infinite
@keyframes load
    0%,100%
        height 40px
        background lightgreen
    50%
        height 70px
        margin -15px 0
        background lightblue

.loading span:nth-child(2)
    animation-delay 0.2s
.loading span:nth-child(3)
    animation-delay 0.4s
.loading span:nth-child(4)
    animation-delay 0.6s
.loading span:nth-child(5)
    animation-delay 0.8s

